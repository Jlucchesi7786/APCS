
public class Room {
	int width;
	int height;
	int playerX;
	int playerY;

	String orientation;

	Room(int width, int height, String orientation) {
		this.width = width + 2;
		this.height = height + 2;
		this.orientation = orientation;
	}

	public String toString() {
		String s = "";
		for (int y = 0; y < height; y++) {
			for (int x = 0; x < width; x++) {
				if (y == 0 || y == height-1 || (y == 14 && x > 6)  || (y == 18 && x > 25) || (y == 18 && x < 6) || (y == 25 && x > 25) || (y == 29 && x < 6)) {
					if ((x == (width/2)-1 && y == height-1) || (x == 27 && y == 25) || (x == 5 && y == 29)) {
						s += "- ";
					} else {
						s += "# ";
					}
				} else if ((y == 4) && (x<6)) {
					s += "# ";
				} else {
					if (y == playerY && x == playerX) {
						s += "@ ";
					} else if ((x == 0) || (x == width-1) || (x == 6) || (x == 25)) {
						if ( ((y == 2 || y == 10 || y == 15 || y == 23) && x == 6) || ((y == 10 || y == 17 || y == 29) && x == 25) ) {
							s += "| ";
						} else {
							s += "# ";
						}
					} else  {
						s += "  ";
					}
					/*if ((x == 0) || (x == width-1) || (x == 6) || (x == 25)) {
						if ( ((y == 2 || y == 10 || y == 15 || y == 23) && x == 6) || ((y == 10 || y == 17 || y == 29) && x == 25) ) {
							s += "| ";
						} else {
							s += "# ";
						}
					} else if (y == playerY && x == playerX) {
						s += "@ ";
					} else  {
						s += "  ";
					}*/
				}

			}
			s += "\n";
		}

		return s;
	}

	public void update(int playerX, int playerY) {
		this.playerX = playerX;
		this.playerY = playerY;
	}
}